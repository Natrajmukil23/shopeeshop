<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".welcome">


    <LinearLayout
        android:id="@+id/w_master"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">


        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:text="Hello there!"
            android:textColor="@color/black"
            android:textSize="35dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.062" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="410dp"
            android:layout_height="61dp"
            android:layout_marginTop="45dp"
            android:gravity="center"
            android:text="Automatic identity verification which enable you to verify your identity"
            android:textColor="@color/black"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.18" />


        <Button
            android:id="@+id/btlogin"
            android:layout_width="301dp"
            android:layout_height="69dp"
            android:layout_gravity="center"
            android:layout_marginTop="300dp"
            android:background="@drawable/shapes"
            android:backgroundTint="#1932BA"
            android:text="login"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.969" />

        <Button
            android:id="@+id/btsignup"
            android:layout_width="301dp"
            android:layout_height="69dp"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:background="@drawable/shapes"
            android:backgroundTint="#A31414"
            android:text="Sign UP"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.845" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/wo_master"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="gone"
        tools:context=".Offline_page">


        <ImageView
            android:id="@+id/img4"
            android:layout_width="187dp"
            android:layout_height="118dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="120dp"
            android:foregroundGravity="center"
            app:srcCompat="@drawable/no_internet" />

        <TextView
            android:id="@+id/edt"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/img4"
            android:layout_marginTop="80dp"
            android:background="@null"
            android:ems="10"
            android:gravity="center"
            android:inputType="textPersonName"
            android:text="OOPS YOUR INTERNET IS NOT CONNECTED"
            android:textColor="@color/purple_200"
            android:textSize="15dp" />


        <TextView
            android:id="@+id/edt1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/edt"
            android:layout_marginTop="10dp"
            android:background="@null"
            android:ems="10"
            android:gravity="center"
            android:inputType="textPersonName"
            android:text="CHECK YOUR INTERNET !!"
            android:textColor="@color/purple_200"
            android:textSize="15dp" />


    </RelativeLayout>

</RelativeLayout>