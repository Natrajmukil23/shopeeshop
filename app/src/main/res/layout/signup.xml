<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="signup"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/s_master"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:text="Sign Up"
            android:textColor="@color/black"
            android:textSize="35dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="120dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/shapes"
            android:ems="10"
            android:hint="Name"
            android:inputType="textPersonName"
            android:paddingLeft="15dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black" />
        <EditText
            android:id="@+id/section"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/shapes"
            android:ems="10"
            android:hint="Contact No"
            android:inputType="phone"
            android:paddingLeft="15dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black" />

        <EditText
            android:id="@+id/mailid"
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/shapes"
            android:ems="10"
            android:hint="Email"
            android:inputType="textPersonName"
            android:paddingLeft="15dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black" />

        <EditText
            android:id="@+id/password2"
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/shapes"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingLeft="15dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black" />

        <EditText
            android:id="@+id/cnfrmpassword"
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:ems="10"
            android:hint="Conform Password"
            android:textColor="@color/black"
            android:background="@drawable/shapes"
            android:inputType="textPassword"
            android:paddingLeft="15dp"
            android:textColorHint="@color/black"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp" />

        <Button
            android:id="@+id/btnsignin"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="100dp"
            android:background="@drawable/shapes"
            android:backgroundTint="#A31414"
            android:text="Sign IN"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="690dp"
            android:layout_marginRight="30dp"
            android:gravity="center"
            android:paddingLeft="6dp"
            android:text="Already have an account?"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/login3"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:gravity="center"
            android:text="Login"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold" />


    </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/so_master"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="gone"
        android:gravity="center"
        tools:context=".Offline_page">


        <ImageView
            android:id="@+id/img4"
            android:layout_width="255dp"
            android:layout_height="173dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="120dp"
            android:foregroundGravity="center"
            app:srcCompat="@drawable/no_internet" />

        <TextView
            android:id="@+id/edt"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/img4"
            android:layout_marginTop="80dp"
            android:background="@null"
            android:ems="10"
            android:gravity="center"
            android:inputType="textPersonName"
            android:text="OOPS YOUR INTERNET IS NOT CONNECTED"
            android:textColor="@color/purple_200"
            android:textSize="15dp" />


        <TextView
            android:id="@+id/edt1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/edt"
            android:layout_marginTop="10dp"
            android:background="@null"
            android:ems="10"
            android:gravity="center"
            android:inputType="textPersonName"
            android:text="CHECK YOUR INTERNET !!"
            android:textColor="@color/purple_200"
            android:textSize="15dp" />


    </RelativeLayout>

</RelativeLayout>