<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEF3F1"
    android:orientation="vertical"
    tools:context="splash">

    <LinearLayout
        android:layout_marginTop="250dp"
        android:orientation="vertical"
        android:id="@+id/smaster"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/appname" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/omaster"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="gone"
        tools:context=".Offline_page">


        <ImageView
            android:id="@+id/img4"
            android:layout_width="255dp"
            android:layout_height="173dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="120dp"
            app:srcCompat="@drawable/no_internet" />

        <TextView
            android:id="@+id/edt"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/img4"
            android:layout_marginTop="80dp"
            android:background="@null"
            android:ems="10"
            android:gravity="center"
            android:inputType="textPersonName"
            android:text="OOPS YOUR INTERNET IS NOT CONNECTED"
            android:textColor="@color/purple_200"
            android:textSize="15dp" />


        <TextView
            android:id="@+id/edt1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/edt"
            android:layout_marginTop="10dp"
            android:background="@null"
            android:ems="10"
            android:gravity="center"
            android:inputType="textPersonName"
            android:text="CHECK YOUR INTERNET !!"
            android:textColor="@color/purple_200"
            android:textSize="15dp" />


    </RelativeLayout>



</RelativeLayout>