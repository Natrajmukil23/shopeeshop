<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="login">

    <LinearLayout
        android:id="@+id/l_master"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints">

    <TextView
        android:id="@+id/password"
        android:layout_width="160dp"
        android:layout_height="63dp"
        android:gravity="center"
        android:text="Login"
        android:textColor="@color/black"
        android:textSize="40dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:layout_gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.057" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="397dp"
        android:layout_height="62dp"
        android:gravity="center"
        android:text="Welcome back! Login with your credentials"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.173" />


    <EditText
        android:id="@+id/username"
        android:layout_width="348dp"
        android:layout_height="78dp"
        android:background="@drawable/shapes"
        android:ems="10"
        android:hint="Username"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:inputType="textEmailAddress"
        android:paddingLeft="25dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.242"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.346" />

    <EditText
        android:id="@+id/edittextPassword"
        android:layout_width="346dp"
        android:layout_height="73dp"
        android:background="@drawable/shapes"
        android:ems="10"
        android:hint="Password"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:inputType="textPassword"
        android:paddingLeft="20dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.246"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.53" />

        <TextView
            android:id="@+id/forgot"
            android:layout_width="185dp"
            android:layout_height="30dp"
            android:text="Forgot Password?"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="220dp"
            android:textColor="@color/black"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.845"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.613" />

    <Button
        android:id="@+id/btnlogin2"
        android:layout_width="236dp"
        android:layout_height="75dp"
        android:background="@drawable/shapes"
        android:backgroundTint="#1932BA"
        android:text="login"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.768" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:paddingLeft="5dp"
        android:text="Dont have an account?"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.317"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.889" />

    <TextView
        android:id="@+id/signup2"
        android:layout_width="94dp"
        android:layout_height="35dp"
        android:text="Sign Up"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.757"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.889" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/lo_master"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="gone"
        tools:context=".Offline_page">


        <ImageView
            android:id="@+id/img4"
            android:layout_width="187dp"
            android:layout_height="118dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="120dp"
            android:foregroundGravity="center"
            app:srcCompat="@drawable/no_internet" />

        <TextView
            android:id="@+id/edt"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/img4"
            android:layout_marginTop="80dp"
            android:background="@null"
            android:ems="10"
            android:gravity="center"
            android:inputType="textPersonName"
            android:text="OOPS YOUR INTERNET IS NOT CONNECTED"
            android:textColor="@color/purple_200"
            android:textSize="15dp" />


        <TextView
            android:id="@+id/edt1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/edt"
            android:layout_marginTop="10dp"
            android:background="@null"
            android:ems="10"
            android:gravity="center"
            android:inputType="textPersonName"
            android:text="CHECK YOUR INTERNET !!"
            android:textColor="@color/purple_200"
            android:textSize="15dp" />


    </RelativeLayout>

</RelativeLayout>